<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
	<include layout="@layout/main_top_1" />
	
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="vertical">
		    <RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"> 		        
		        
		   </RelativeLayout> 
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="vertical">	    
		      <TextView
			        android:id="@+id/uploadImageResult"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="" />	    
		</LinearLayout>	
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="vertical"
			>			
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="52dp" >
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"	    
		            android:layout_marginLeft="30dp"
		            android:text="职位"
		            android:textAppearance="?android:attr/textAppearanceLarge"
		            android:textSize="7pt" />

		        <TextView
		            android:id="@+id/app_recruit_job"
		            android:layout_width="150dip"
		            android:layout_height="40dip"
		            android:layout_alignParentBottom="true"
		            android:layout_marginLeft="62dp"
		            android:layout_toRightOf="@+id/textView1"
		            android:layout_weight="1" />

		    </RelativeLayout>
			<RelativeLayout
			    android:layout_width="fill_parent"
			    android:layout_height="49dp" >
			    <TextView
			        android:id="@+id/textView2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="29dp"
			        android:text="招聘人数"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="7pt" />
			    <TextView
			        android:id="@+id/app_recruit_numbers"
			        android:layout_width="150dip"
			        android:layout_height="40dip"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="30dp"
			        android:layout_toRightOf="@+id/textView2"
			        android:layout_weight="1"
			        android:inputType="textPassword" />
			</RelativeLayout>
			<RelativeLayout
			    android:layout_width="fill_parent"
			    android:layout_height="54dp" >
			    <TextView
			        android:id="@+id/textView3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="30dp"
			        android:text="工资"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="7pt" />

			    <TextView
			        android:id="@+id/app_recruit_salary"
			        android:layout_width="150dip"
			        android:layout_height="40dip"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentTop="true"
			        android:layout_marginRight="34dp"
			        android:layout_weight="1"
			        android:inputType="textPassword" />

			</RelativeLayout>
			<RelativeLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" >
			    <TextView
			        android:id="@+id/textView4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="30dp"
			        android:text="应聘条件"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="7pt" />
			    <TextView
			        android:id="@+id/app_recruit_qualifications"
			        android:layout_width="150dip"
			        android:layout_height="40dip"
			        android:layout_alignParentTop="true"
			        android:layout_marginLeft="28dp"
			        android:layout_toRightOf="@+id/textView4"
			        android:layout_weight="1"
			        android:inputType="textPassword" />
			</RelativeLayout>
			<RelativeLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" >
			    <TextView
			        android:id="@+id/textView4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="30dp"
			        android:text="工作描述"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textSize="7pt" />
			    <TextView
			        android:id="@+id/app_job_desc"
			        android:layout_width="150dip"
			        android:layout_height="40dip"
			        android:layout_alignParentTop="true"
			        android:layout_marginLeft="28dp"
			        android:layout_toRightOf="@+id/textView4"
			        android:layout_weight="1"
			        android:inputType="textPassword" />
			</RelativeLayout>
		</LinearLayout>
		<WebView android:id="@+id/web_map" 
	        android:layout_height="fill_parent" 
	        android:layout_weight="1" 
	        android:layout_width="fill_parent" />
		<include layout="@layout/main_tab" />
</LinearLayout>
</merge>