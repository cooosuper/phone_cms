<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:orientation="vertical" >

	<Button
	      android:id="@+id/backBtn"
	      style="?android:attr/buttonStyleSmall"
	      android:layout_width="60dp"
	      android:layout_height="33dp"
	      android:layout_marginTop="10dp"
	      android:layout_marginLeft="10dp" 
	      android:textSize="7pt"    
	      android:text="取消" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"        
         android:text="注册账号"
         android:textColor="#FFFFFF"
         android:textSize="10pt" />

     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="20dip" 
	    android:orientation="vertical" >
  
		<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
	

		    <EditText
		        android:id="@+id/app_login_edit_username"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:ems="10"
		        android:inputType="textPersonName" />
		    
		    <TextView
		        android:id="@+id/login_username"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="35dp"
		        android:text="用户名"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt" />
	
	
	    </RelativeLayout>
		<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
		
		    <EditText
		        android:id="@+id/app_login_edit_pass"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:ems="10"
		        android:inputType="textPassword" />
	
		    <TextView
		        android:id="@+id/login_pass"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="35dp"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt"
		        android:text="密码" />
	
	    </RelativeLayout>
	    <RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
		
		    <EditText
		        android:id="@+id/re_app_login_edit_pass"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:ems="10"
		        android:inputType="textPassword" />
	
		    <TextView
		        android:id="@+id/re_login_pass"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/re_app_login_edit_pass"
		        android:layout_alignBottom="@+id/re_app_login_edit_pass"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="17dp"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt"
		        android:text="确认密码" />
	
	    </RelativeLayout>
		<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
	
		    <EditText
		        android:id="@+id/app_edit_phone"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:layout_marginLeft="100dp"
		        android:inputType="phone" />
	
		    <TextView
		        android:id="@+id/user_phone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/app_edit_phone"
		        android:layout_alignBottom="@+id/app_edit_phone"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="14dp"
		        android:text="电话号码"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt" />
	
	    </RelativeLayout>
		<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
	
		    <EditText
		        android:id="@+id/app_edit_email"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:inputType="textEmailAddress" >
	
		        <requestFocus />
		    </EditText>
	
		    <TextView
		        android:id="@+id/user_email"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="18dp"
		        android:text="邮箱地址"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt" />
	
	    </RelativeLayout>
		<RelativeLayout 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content">
	
		    <EditText
		        android:id="@+id/app_edit_address"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:inputType="textPostalAddress" />
	
		    <TextView
		        android:id="@+id/user_address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="16dp"
		        android:text="通讯地址"
		        android:textColor="#FFFFFF"
		        android:textSize="7pt" />
	
		</RelativeLayout>
	    <CheckBox
	        android:id="@+id/checkBox1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:textColor="#FFFFFF"
	        android:textSize="5pt"
	        android:text="已阅读并同意" />
	
	    <Button
	        android:id="@+id/app_btn_register_submit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="13dp"
	        android:textSize="7pt"
	        android:text="注册" />
	</LinearLayout>
    
</LinearLayout>
