<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp" >

	    <Button
	        android:id="@+id/back_Btn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="返回" />

	    <TextView
	        android:id="@+id/register_user"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/back_Btn"
	        android:layout_centerHorizontal="true"
	        android:text="注册"
	        android:textColor="#FFFFFF"
	        android:textSize="10pt" />

    </RelativeLayout>
	<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">

	    <TextView
	        android:id="@+id/login_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="29dp"
	        android:text="用户名"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt" />

	    <EditText
	        android:id="@+id/app_login_edit_username"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="20dp"
	        android:layout_toRightOf="@+id/login_username"
	        android:ems="10"
	        android:inputType="textPersonName" />

    </RelativeLayout>
	<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
	
	    <EditText
	        android:id="@+id/app_login_edit_pass"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="100dp"
	        android:ems="10"
	        android:inputType="textPassword" />

	    <TextView
	        android:id="@+id/login_pass"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/app_login_edit_pass"
	        android:layout_alignBottom="@+id/app_login_edit_pass"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="35dp"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt"
	        android:text="密码" />

    </RelativeLayout>
    <RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
	
	    <EditText
	        android:id="@+id/re_app_login_edit_pass"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="100dp"
	        android:ems="10"
	        android:inputType="textPassword" />

	    <TextView
	        android:id="@+id/re_login_pass"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/editText2_1"
	        android:layout_alignBottom="@+id/editText2_1"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="17dp"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt"
	        android:text="确认密码" />

    </RelativeLayout>
	<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">

	    <EditText
	        android:id="@+id/app_edit_phone"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="40dp"
	        android:ems="10"
	        android:inputType="phone" />

	    <TextView
	        android:id="@+id/user_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/app_edit_phone"
	        android:layout_alignBottom="@+id/app_edit_phone"
	        android:layout_marginRight="18dp"
	        android:layout_toLeftOf="@+id/app_edit_phone"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt"
	        android:text="电话号码" />

    </RelativeLayout>
	<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">

	    <EditText
	        android:id="@+id/app_edit_email"
	        android:layout_width="175dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="42dp"
	        android:ems="10"
	        android:inputType="textEmailAddress" >

	        <requestFocus />
	    </EditText>

	    <TextView
	        android:id="@+id/user_email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/app_edit_email"
	        android:layout_alignBottom="@+id/app_edit_email"
	        android:layout_marginRight="19dp"
	        android:layout_toLeftOf="@+id/app_edit_email"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt"
	        android:text="邮箱地址" />

    </RelativeLayout>
	<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">

	    <EditText
	        android:id="@+id/app_edit_address"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="40dp"
	        android:ems="10"
	        android:inputType="textPostalAddress" />

	    <TextView
	        android:id="@+id/user_address"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/app_edit_address"
	        android:layout_alignBottom="@+id/app_edit_address"
	        android:layout_marginRight="18dp"
	        android:layout_toLeftOf="@+id/app_edit_address"
	        android:textColor="#FFFFFF"
	        android:textSize="7pt"
	        android:text="通讯地址" />

	</RelativeLayout>
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="7pt"
        android:text="已阅读并同意" />

    <Button
        android:id="@+id/app_btn_register_submit"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="注册" />

</LinearLayout>
